  "Template": {
    "TemplateName": "TransactionSummaryTemplate",
    "SubjectPart": "Transactions Summary",
    "TextPart": "Here is the summary of your transactions.",
    "HtmlPart": "<!DOCTYPE html>\n<html lang=\"en\">\n<head>\n    <meta charset=\"UTF-8\">\n    <meta name=\"viewport\" content=\"width=device-width, initial-scale=1.0\">\n    <title>Transaction Summary</title>\n</head>\n<body style=\"font-family: Arial, sans-serif; margin: 0; padding: 0 250px; background-color: #dddddd55;\">\n    <header style=\"background-color: #333; color: white; text-align: center; padding: 20px 0; width: 100%;\">\n        <img src=\"https://prueba-stori-bucket.s3.amazonaws.com/logo.svg\" alt=\"Company Logo\" style=\"max-width: 200px; height: auto;\">\n    </header>\n    <div style=\"padding: 80px; background-color: white;\">\n        <h2 style=\"text-align: center;\">Transaction Summary</h2>\n        <table style=\"border-collapse: collapse; width: 100%;\">\n            <thead>\n                <tr>\n                    <th style=\"padding: 10px; border: 1px solid #ddd; text-align: left;\">Month</th>\n                    <th style=\"padding: 10px; border: 1px solid #ddd; text-align: right;\">Value</th>\n                </tr>\n            </thead>\n            <tbody>\n                {{#transactions}}\n                <tr>\n                    <td style=\"padding: 10px; border: 1px solid #ddd; text-align: left;\">{{month}}</td>\n                    <td style=\"padding: 10px; border: 1px solid #ddd; text-align: right;\">{{count}}</td>\n                </tr>\n                {{/transactions}}\n            </tbody>\n        </table>\n        <br>\n        <h3 style=\"text-align: center;\">Summary</h3>\n        <div style=\"text-align: right;\">\n            <p><strong>Total Debits:</strong> {{total_debits}}</p>\n            <p><strong>Total Credits:</strong> {{total_credits}}</p>\n            <p><strong>Credits Average:</strong> {{credit_avg}}</p>\n            <p><strong>Debits Average:</strong> {{debit_avg}}</p>\n            <p><strong>Total Balance:</strong> {{total_balance}}</p>\n        </div>\n    </div>\n    <footer style=\"text-align: center; padding: 20px 0; background-color: #333; color: #ddd; font-size: 14px; width: 100%;\">\n        This email was automatically generated. Please do not reply.\n    </footer>\n</body>\n</html>"
  }
